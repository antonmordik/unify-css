{
  "name": "unify-css",
  "version": "1.0.1",
  "description": "Simple CSS postprocessor",
  "main": "./lib/index.js",
  "bin": {
    "uni": "./lib/index.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "test": "sudo npm i -g && cd test && uni -C \"option\"",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "author": "Anton Mordik",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.0.0",
    "clear": "^0.1.0",
    "commander": "^5.1.0",
    "figlet": "^1.4.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/node": "^14.0.11",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
